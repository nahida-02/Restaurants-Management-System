<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet"  href="http://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudfare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/boostrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/admin1.css">
    <title>Admin</title>
</head>

<body>
    <div class="page_wrape">
        <input type="checkbox" id="nav-toggle">
   
     <%- include('../partials/sidebar.ejs') %>
        <%- include('../partials/header.ejs') %>
        <!-- Header starts -->
        


        <!-- main content -->
        <div class="main-content ">
          <div class="container mt-2" >
       <form action="/products/add_products" method="post" class="myform" class="form-group" >
           <div class="jumbotron"  style="background-color:#C1C1C1;">
               <h3 class="text-center text-danger text-info mb-5">Product Save Info</h3>
               <div class="form-row">
                   <!-- <div class="form-group col-md-6">
                       <label for="input">Food ID</label>
                       <input type="text" name="" class="form-control" placeholder="type food id">
                   </div> -->
                    <div class="form-group col-md-6">
                       <label for="input">FOOD NAME</label>
                       <input type="text" name="name" class="form-control" placeholder="type food name">
                   </div>
               </div>
               <div class="form-row">
                   <div class="form-group col-md-6">
                       <label for="input">FOOD DESCRIPTION</label>
                       <!-- <input type="text" name="" class="form-control" placeholder="type food description"> -->
                       <textarea class="form-control" name="description" placeholder="type food description"></textarea>
                   </div>
                    <div class="form-group col-md-6">
                       <label for="input">FOOD CATEGORY</label>
                       <input type="text" name="category" class="form-control" placeholder="type food category">
                   </div>
               </div>
               <div class="form-row">
                   <div class="form-group col-md-3">
                       <label for="input">PRICE</label>
                       <input type="number" name="price" class="form-control" placeholder="type food price">
                   </div>
                    <div class="form-group col-md-3">
                       <label for="input">QUANTITY</label>
                       <input type="number" name="quantity" class="form-control" placeholder="type food quantity">
                   </div>
                   <!-- <div class="form-group col-md-3">
                       <label for="input">Discount</label>
                       <input type="" name="" class="form-control" placeholder="discount">
                   </div> -->
                   <!-- <div class="form-group col-md-3">
                       <label for="input">Discount Price</label>
                       <input type="" name="" class="form-control" placeholder="discount price">
                   </div> -->
               </div>
               <div class="form-row">
                   <div class="form-group col-md-6">
                       <label for="input" class="">Restaurants</label>
                       <div class="dropdown">
                       <div class="row">
                           <div class="col-sm-4">
                               <select name="rest" id="" class="">
                                   <option value="Burgerology">Burgerology</option>
                                   <option value="Candle café">Candle café</option>
                                   <option value="Chinese Mystic">Chinese Mystic</option>
                                   <option value="Steak_N_Dine">Steak-N-Dine</option>
                                   <!-- <option value="Koreana Pleasure">Koreana Pleasure</option>
                                   <option value="Biriyani Pleasure">Biriyani Pleasure</option> -->
                               </select>
                           </div>
                       </div>
                       </div>
                  </div>
                   <div class="form-group col-md-6">
                       <label for="input" class="">FOOD TYPE</label>
                       <div class="dropdown">
                       <div class="row">
                           <div class="col-sm-4">
                               <select name="type" id="" class="">
                                   <option value="special">Special</option>
                                   <option value="regular">Regular</option>
                                   
                               </select>
                           </div>
                       </div>
                       </div>
                  </div>


                   </div>
               <div class="form-row">
                   <div class="form-group col-md-6">
                       <label for="input">Main Image/File</label>
                       <input type="file" name="imgg" class="form-control" placeholder="type food quantity">
                   </div>
               </div>
               <div class="form-row">
                   <div class="form-group col-md-12 text-center text-right mt-5">
                       <button type="submit" class="btn btn-success btn-lg">Save</button>
                   </div>
               </div>
                  
               </div>
               
           </div>
       </form>
   </div>



        </div>


    </div>



</body>

</html>